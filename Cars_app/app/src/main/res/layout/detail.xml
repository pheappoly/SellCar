<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/LBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:gravity="center"
                android:text="1200 Results"
                android:background="@color/colorBar"
                />
            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-50dp"
                android:layout_weight="1"
                tools:srcCompat="@mipmap/ic_search" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LBar1"
            android:layout_below="@+id/LBar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="204sp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30sp"
                android:background="@color/colorPrimaryDark"
                tools:srcCompat="@mipmap/ic_filter_list" />

            <ImageView
                android:layout_width="204sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="30sp"
                tools:srcCompat="@mipmap/ic_sort" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/LBar1"
        android:layout_marginTop="10sp"
        android:background="@color/design_default_color_primary"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            tools:srcCompat="@mipmap/ic_sort" />
    </LinearLayout>
    </RelativeLayout>
</ScrollView>